<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/back4"
        >

    </LinearLayout>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"
        android:layout_marginTop="40dp"/>


 <ImageView
     android:layout_width="120dp"
     android:layout_height="120dp"
     android:layout_marginTop="220dp"
     android:src="@drawable/about_1"
     android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="230dp"
        android:layout_height="120dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="150dp"
        android:text="Jiva Sciences Private Limited is a Bengaluru based start-up that takes up Research Process Outsourcing (RPO) in the areas of bio-engineering. Founded in 2015, the business model is different from Contract Research Outsourcing (CRO), as in the latter, the design of the experiment and what steps to be taken for getting to the objective is specified by the client."
        android:textSize="11dp"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/about_2"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="270dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="230dp"
        android:layout_height="120dp"
        android:layout_marginTop="400dp"
        android:text="The company is a high learning organization with engineers and scientists having reasonable depth of knowledge across more than one discipline. Very specialized knowledge could be brought in by working with academics and outside teams, with our employees getting opportunities to work with such experts"
        android:textSize="11dp"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>